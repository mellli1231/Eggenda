<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background box -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#D3D3D3"/> <!-- Box background color -->
            <corners android:radius="8dp"/>
            <stroke
                android:color="@color/fire"
                android:width="2dp"/> <!-- Border color and width -->
        </shape>
    </item>

    <!-- Line inside the box -->
    <item android:right="10dp" android:left="10dp" android:top="50%">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/fire"/> <!-- Line color -->
            <size android:height="2dp"/>
        </shape>
    </item>
</layer-list>